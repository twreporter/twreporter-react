    "mobile-detect": "^1.3.0",
    "normalizr": "^1.0.0",
    "piping": "^0.3.0",
    "pretty-error": "^2.0.0",
    "qs": "^5.2.0",
    "react": "^0.14.3",
    "react-addons-test-utils": "^0.14.0",
