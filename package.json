{
  "name": "twreporter-react",
  "version": "2.1.3",
  "description": "React-Redux site for The Reporter Foundation in Taiwan",
  "scripts": {
    "release": "gulp release",
    "clean": "./node_modules/.bin/rimraf dist",
    "build": "better-npm-run build",
    "dev": "concurrent --kill-others \"npm run watch-client\" \"npm run start-dev\" ",
    "start-dev": "better-npm-run start-dev",
    "watch-client": "better-npm-run watch-client",
    "start": "concurrent --kill-others \"npm run start-prod\"",
    "start-prod": "better-npm-run start-prod",
    "test": "./node_modules/mocha/bin/mocha $(find src -name '*.test.js') --compilers js:babel-core/register",
    "validate": "npm ls",
    "lint": "eslint -c .eslintrc src server"
  },
  "betterScripts": {
    "start-prod": {
      "command": "node ./bin/server.js",
      "env": {
        "NODE_PATH": "./server",
        "NODE_ENV": "production",
        "PORT": 3000
      }
    },
    "start-dev": {
      "command": "node ./bin/server.js",
      "env": {
        "NODE_PATH": "./server",
        "NODE_ENV": "development",
        "PORT": 3000
      }
    },
    "watch-client": {
      "command": "node webpack/webpack-dev-server.js",
      "env": {
        "UV_THREADPOOL_SIZE": 100,
        "NODE_PATH": "./src"
      }
    },
    "build": {
      "command": "webpack --verbose --colors --display-error-details --config webpack/prod.config.js",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/twreporter/twreporter-react"
  },
  "license": "AGPL-3.0",
  "engines": {
    "node": ">=4.1.1"
  },
  "bugs": {
    "url": "https://github.com/twreporter/twreporter-react/issues"
  },
  "dependencies": {
    "classnames": "^2.2.1",
    "ejs": "^2.3.4",
    "es6-error": "^2.1.1",
    "express": "^4.13.3",
