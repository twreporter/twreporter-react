{
  "name": "twreporter-react",
  "version": "2.2.10",
  "description": "React-Redux site for The Reporter Foundation in Taiwan",
  "scripts": {
    "build": "npm run clean && npm run build-webpack && npm run build-server",
    "build-server": "NODE_ENV=production BABEL_ENV=ssr babel src --out-dir dist --copy-files",
    "build-webpack": "NODE_ENV=production webpack --config webpack.config.js --progress --colors",
    "clean": "./node_modules/.bin/rimraf dist webpack-assets.json",
    "dev": "concurrently --kill-others \"npm run start-webpack-dev-server\" \"npm run start-dev-server\"",
    "lint": "eslint -c .eslintrc src",
    "start": "npm run build && npm run start-server",
    "start-dev-server": "NODE_ENV=development BABEL_ENV=ssr nodemon ./src/server --exec babel-node",
    "start-server": "NODE_ENV=production node ./dist/server",
    "start-webpack-dev-server": "NODE_ENV=development node ./webpack-dev-server.js",
    "test": "./node_modules/mocha/bin/mocha $(find src -name '*.test.js') --compilers js:babel-core/register",
    "validate": "npm ls"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/twreporter/twreporter-react"
  },
  "license": "AGPL-3.0",
  "engines": {
    "node": ">=4.1.1"
  },
  "bugs": {
    "url": "https://github.com/twreporter/twreporter-react/issues"
  },
  "dependencies": {
